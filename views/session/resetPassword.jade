    body#loginForm 
    - var info = locals.info
    - var user = locals.usuario
    - console.log(user)
    
        .container 
            .login-form 
                .main-div 
                    .panel 
                        if info && info.message 
                            div.alert.alert-info #{info.message}

                        h2 Cambio de password
                        p Por favor, ingrese su clave

                    form#Login(action='/resetPassword', method='post')
                        input#email(type='hidden',  name='email', value=user.email)
                        .form-group
                            label(for="pwd") Password: 
                            input#pwd.form-control(type='password', placeholder='Password', name='password')
                        .form-group
                            label(for="confirm_pwd") Confirmar Password: 
                            input#pwd.form-control(type='password', placeholder='Password', name='confirm_password')
                        button.btn.btn-primary(type='submit') Cambiar password 